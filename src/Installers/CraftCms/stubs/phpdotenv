#!/bin/bash

# ------------------------------------------------------------------------------
# Install Composer Dependencies
# ------------------------------------------------------------------------------

composer install

# ------------------------------------------------------------------------------
# Create .env file
# ------------------------------------------------------------------------------

cp .env-example .env

# ------------------------------------------------------------------------------
# Add paths to .gitignore
# ------------------------------------------------------------------------------

touch .gitignore
echo '.env' >> .gitignore

# ------------------------------------------------------------------------------
# Add lines to index.php that load library
# ------------------------------------------------------------------------------

sed -i -e "2r index-phpdotenv" public/index.php

# ------------------------------------------------------------------------------
# Remove temporary files
# ------------------------------------------------------------------------------

rm index-phpdotenv
rm public/index.php-e
