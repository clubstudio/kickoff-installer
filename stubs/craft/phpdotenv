#!/bin/bash

# ------------------------------------------------------------------------------
# Install Composer Dependencies
# ------------------------------------------------------------------------------

composer install

# ------------------------------------------------------------------------------
# Create .env file
# ------------------------------------------------------------------------------

cat > .env <<EOL
DB_HOST=localhost
DB_NAME=
DB_USER=
DB_PASS=
EOL

# ------------------------------------------------------------------------------
# Add paths to .gitignore
# ------------------------------------------------------------------------------

touch .gitignore
echo '.env' >> .gitignore
